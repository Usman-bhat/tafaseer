[{"ayah_number":1,"text_arabic":"وَالشَّمْسِ وَضُحَاهَا  وَالْقَمَرِ إِذَا تَلَاهَا","surah_id":91,"covers_ayahs":"1-2"},{"ayah_number":3,"text_arabic":"وَالنَّهَارِ إِذَا جَلَّاهَا","surah_id":91},{"ayah_number":4,"text_arabic":"وَاللَّيْلِ إِذَا يَغْشَاهَا","surah_id":91},{"ayah_number":5,"text_arabic":"وَالسَّمَاءِ وَمَا بَنَاهَا","surah_id":91},{"ayah_number":6,"text_arabic":"وَالْأَرْضِ وَمَا طَحَاهَا","surah_id":91},{"ayah_number":7,"text_arabic":"وَنَفْسٍ وَمَا سَوَّاهَا","surah_id":91},{"ayah_number":8,"text_arabic":"فَأَلْهَمَهَا فُجُورَهَا وَتَقْوَاهَا","surah_id":91},{"ayah_number":9,"text_arabic":"قَدْ أَفْلَحَ مَنْ زَكَّاهَا","surah_id":91},{"ayah_number":10,"text_arabic":"وَقَدْ خَابَ مَنْ دَسَّاهَا","surah_id":91},{"ayah_number":11,"text_arabic":"كَذَّبَتْ ثَمُودُ بِطَغْوَاهَا","surah_id":91},{"ayah_number":12,"text_arabic":"إِذِ انْبَعَثَ أَشْقَاهَا","surah_id":91},{"ayah_number":13,"text_arabic":"فَقَالَ لَهُمْ رَسُولُ اللَّهِ نَاقَةَ اللَّهِ وَسُقْيَاهَا","surah_id":91},{"ayah_number":14,"text_arabic":"فَكَذَّبُوهُ فَعَقَرُوهَا فَدَمْدَمَ عَلَيْهِمْ رَبُّهُمْ بِذَنْبِهِمْ فَسَوَّاهَا","surah_id":91},{"ayah_number":15,"text_arabic":"وَلَا يَخَافُ عُقْبَاهَا","surah_id":91}]