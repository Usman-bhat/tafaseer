[{"ayah_number":1,"text_arabic":"إِذَا زُلْزِلَتِ الْأَرْضُ زِلْزَالَهَا","surah_id":99},{"ayah_number":2,"text_arabic":"وَأَخْرَجَتِ الْأَرْضُ أَثْقَالَهَا","surah_id":99},{"ayah_number":3,"text_arabic":"وَقَالَ الْإِنْسَانُ مَا لَهَا","surah_id":99},{"ayah_number":4,"text_arabic":"يَوْمَئِذٍ تُحَدِّثُ أَخْبَارَهَا","surah_id":99},{"ayah_number":5,"text_arabic":"بِأَنَّ رَبَّكَ أَوْحَى لَهَا","surah_id":99},{"ayah_number":6,"text_arabic":"يَوْمَئِذٍ يَصْدُرُ النَّاسُ أَشْتَاتًا لِيُرَوْا أَعْمَالَهُمْ","surah_id":99},{"ayah_number":7,"text_arabic":"فَمَنْ يَعْمَلْ مِثْقَالَ ذَرَّةٍ خَيْرًا يَرَهُ  وَمَنْ يَعْمَلْ مِثْقَالَ ذَرَّةٍ شَرًّا يَرَهُ","surah_id":99,"covers_ayahs":"7-8"}]